rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /apps/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'xyzapplywork@gmail.com';
    }
    match /apps/{appId} {
      allow read;
      allow write: if request.auth != null && request.auth.token.email == 'xyzapplywork@gmail.com';
    }
  }
}