rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin users to read and write to the 'apks' folder
    match /apks/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.token.email == 'xyzapplywork@gmail.com';
    }

    // Deny all other operations on all other folders
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
